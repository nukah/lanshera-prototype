<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>.Radi/bloga</title>
  <meta name="description" content="Radibloga">
  <meta name="author" content="7q">
  <meta name="viewport" content="width=device-width,initial-scale=1">  
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<div class="backlayer_top"></div>
	<div class="backlayer_rest"></div>
	<div class="container_12">
		<div class="grid_12 heading">
			4Blog
		</div>
		<div class="clear"></div>
		<div class="grid_12 menu">
			<div class="grid_6 menu_left alpha">
				<%= render :partial => 'partial/menu' %>
			</div>
		</div>
		<div class="clear"></div>
		<div class="grid_8 content">
			<%= render :partial => 'partial/notice' %>
			<%= yield %>
		</div>
		<div class="grid_3 sidebar">
			<%= render :partial => 'partial/sidebar' %>
		</div>
		<div class="clear"></div>
	</div>
</body>
