<div class="auth_header">
	<%= content_tag(:h3, t('signup')) %>
</div>
<div class="auth_content">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<fieldset>
		<dl>
			<dt><%= f.label :email %></dd>
			<dd><%= f.email_field :email %></dd>
			
			<dt><%= f.label :password %></dd>
			<dd><%= f.password_field :password %></dd>
			
			<dt><%= f.label :password_confirmation %></dd>
			<dd><%= f.password_field :password_confirmation %></dd>
		</dl>
	</fieldset>
	<div class="submit">
  		<%= f.submit "Регистрация" %>
	</div>
<% end %>
</div>