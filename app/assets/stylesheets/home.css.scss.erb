$menu_background: #abcdef;
$aml_hover_color: #FAF2F0;
$aml_color: #9AAEB9;
$content_color: #F7F7F7;

.backlayer_top {
	width: 100%;
	position: absolute;
	background-color: #991818;
	height: 200px;
	left: 0;
	top: 0;
	border-bottom: 1px dotted #ffffff;
}
body {
	font: 14px Georgia, "Lucida Grande";
	background: url(<%= asset_path('header_pattern.gif') %>) repeat;
}
.content, .sidebar {
	color: $content_color;
	padding: 5px 8px;
	margin-top: 15px;
	background-color: rgba(59,55,55,0.95);
	border-style: dashed;
	border-color: white;
	border-width: 1px;
	height: 400px;
}

.content {
	letter-spacing: 1px;
	h1 {
		font-weight: bold;
		font-size: 150%;
		border-bottom: 1px dotted white;
	}
	p {
		text-indent: 10px;
		&:first-letter {
			font-weight: bold;
			font-size: 115%;
		}
	}
	a {
		text-decoration: none;
		color: #9DD3DF;
		&:hover {
			border-bottom: 1px dashed white;
			color: #C9D1D3;
		}
	}
}

.heading {
	color: #EE4348;
	font-weight: bold;
	font-size: 2em;
	
}

.sidebar {
}
.menu {
	height: 2em;
}
.menu_left {
	width: 100%;
	height: 100%;
	padding-left: 10px;
	padding-top: 4px;
	a {
		color: $aml_color;
		font-size: 18px;
		text-decoration: none;
		border-bottom: 1px dashed $aml_color;
		&:hover {
			color: $aml_hover_color;
			border-bottom: none;
		}
	}
}

.message	{
	display: block;
	-moz-box-shadow: inset 0 -1px 0 rgba(255,255,255,.4);
	-webkit-box-shadow: inset 0 -1px 0 rgba(255,255,255,.4);
	box-shadow: inset 0 -1px 0 rgba(255,255,255,.4);
	margin: 10px 0px 10px 0px;
	border: 2px solid;
	color: #fff;
	padding: 10px;
	text-shadow: 0 1px 0 rgba(0,0,0,0.5);
	-webkit-animation: animate-bg 5s linear infinite;
	-moz-animation: animate-bg 5s linear infinite;
	p {
		margin: 0;
	}
}
.notice {
	@extend .message;
	background-color: #4ea5cd;
	border-color: #3b8eb5;
}
.error {
	@extend .message;
	background-color: #de4343;
	border-color: #c43d3d;
}
.warning {
	@extend .message;
	background-color: #eaaf51;
	border-color: #d99a36;
}
.success {
	@extend .message;
	background-color: #61b832;
	border-color: #55a12c;
}
